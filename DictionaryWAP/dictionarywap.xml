<?xml version="1.0" encoding="UTF-8"?>
<project name="dictionarywap" default="all">
  
  
  <property file="dictionarywap.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.klib"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.zip"/>
    <include name="*.ane"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.maven:_javax.servlet.jsp:javax.servlet.jsp-api:2.3.1.classpath">
    <pathelement location="${path.variable.maven_repository}/javax/servlet/jsp/javax.servlet.jsp-api/2.3.1/javax.servlet.jsp-api-2.3.1.jar"/>
  </path>
  
  <path id="library.maven:_javax.servlet:javax.servlet-api:3.1.0.classpath">
    <pathelement location="${path.variable.maven_repository}/javax/servlet/javax.servlet-api/3.1.0/javax.servlet-api-3.1.0.jar"/>
  </path>
  
  <path id="library.maven:_junit:junit:4.11.classpath">
    <pathelement location="${path.variable.maven_repository}/junit/junit/4.11/junit-4.11.jar"/>
  </path>
  
  <path id="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath">
    <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
  </path>
  
  <path id="library.maven:_org.springframework:spring-aop:5.0.12.release.classpath">
    <pathelement location="${path.variable.maven_repository}/org/springframework/spring-aop/5.0.12.RELEASE/spring-aop-5.0.12.RELEASE.jar"/>
  </path>
  
  <path id="library.maven:_org.springframework:spring-beans:5.0.12.release.classpath">
    <pathelement location="${path.variable.maven_repository}/org/springframework/spring-beans/5.0.12.RELEASE/spring-beans-5.0.12.RELEASE.jar"/>
  </path>
  
  <path id="library.maven:_org.springframework:spring-context:5.0.12.release.classpath">
    <pathelement location="${path.variable.maven_repository}/org/springframework/spring-context/5.0.12.RELEASE/spring-context-5.0.12.RELEASE.jar"/>
  </path>
  
  <path id="library.maven:_org.springframework:spring-core:5.0.12.release.classpath">
    <pathelement location="${path.variable.maven_repository}/org/springframework/spring-core/5.0.12.RELEASE/spring-core-5.0.12.RELEASE.jar"/>
  </path>
  
  <path id="library.maven:_org.springframework:spring-expression:5.0.12.release.classpath">
    <pathelement location="${path.variable.maven_repository}/org/springframework/spring-expression/5.0.12.RELEASE/spring-expression-5.0.12.RELEASE.jar"/>
  </path>
  
  <path id="library.maven:_org.springframework:spring-jcl:5.0.12.release.classpath">
    <pathelement location="${path.variable.maven_repository}/org/springframework/spring-jcl/5.0.12.RELEASE/spring-jcl-5.0.12.RELEASE.jar"/>
  </path>
  
  <path id="library.maven:_org.springframework:spring-test:5.0.1.release.classpath">
    <pathelement location="${path.variable.maven_repository}/org/springframework/spring-test/5.0.1.RELEASE/spring-test-5.0.1.RELEASE.jar"/>
  </path>
  
  <path id="library.maven:_org.springframework:spring-web:5.0.12.release.classpath">
    <pathelement location="${path.variable.maven_repository}/org/springframework/spring-web/5.0.12.RELEASE/spring-web-5.0.12.RELEASE.jar"/>
  </path>
  
  <path id="library.maven:_org.springframework:spring-webmvc:5.0.12.release.classpath">
    <pathelement location="${path.variable.maven_repository}/org/springframework/spring-webmvc/5.0.12.RELEASE/spring-webmvc-5.0.12.RELEASE.jar"/>
  </path>
  
  
  <!-- Application Server Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_dictionarywap.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.dictionarywap, clean.artifact.dictionarywap:war_exploded" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.dictionarywap" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.dictionarywap:war" value="${basedir}/target"/>
    <property name="artifact.output.dictionarywap:war_exploded" value="${basedir}/target/Dict"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.Dict.war" value="${artifacts.temp.dir}/Dict.war"/>
  </target>
  
  <target name="clean.artifact.dictionarywap:war_exploded" description="clean DictionaryWAP:war exploded artifact output">
    <delete dir="${artifact.output.dictionarywap:war_exploded}"/>
  </target>
  
  <target name="artifact.dictionarywap:war" depends="init.artifacts, artifact.dictionarywap:war_exploded" description="Build &#39;DictionaryWAP:war&#39; artifact">
    <property name="artifact.temp.output.dictionarywap:war" value="${artifacts.temp.dir}/DictionaryWAP_war"/>
    <mkdir dir="${artifact.temp.output.dictionarywap:war}"/>
    <zip destfile="${temp.jar.path.Dict.war}">
      <zipfileset dir="${artifact.temp.output.dictionarywap:war_exploded}"/>
    </zip>
    <copy file="${temp.jar.path.Dict.war}" tofile="${artifact.temp.output.dictionarywap:war}/Dict.war"/>
  </target>
  
  <target name="artifact.dictionarywap:war_exploded" depends="init.artifacts, compile.module.dictionarywap" description="Build &#39;DictionaryWAP:war exploded&#39; artifact">
    <mkdir dir="${artifact.output.dictionarywap:war_exploded}"/>
    <mkdir dir="${artifact.output.dictionarywap:war_exploded}/WEB-INF"/>
    <mkdir dir="${artifact.output.dictionarywap:war_exploded}/WEB-INF/classes"/>
    <copy todir="${artifact.output.dictionarywap:war_exploded}/WEB-INF/classes">
      <fileset dir="${dictionarywap.output.dir}"/>
    </copy>
    <mkdir dir="${artifact.output.dictionarywap:war_exploded}/WEB-INF/lib"/>
    <copy file="${path.variable.maven_repository}/org/springframework/spring-webmvc/5.0.12.RELEASE/spring-webmvc-5.0.12.RELEASE.jar" tofile="${artifact.output.dictionarywap:war_exploded}/WEB-INF/lib/spring-webmvc-5.0.12.RELEASE.jar"/>
    <copy file="${path.variable.maven_repository}/org/springframework/spring-aop/5.0.12.RELEASE/spring-aop-5.0.12.RELEASE.jar" tofile="${artifact.output.dictionarywap:war_exploded}/WEB-INF/lib/spring-aop-5.0.12.RELEASE.jar"/>
    <copy file="${path.variable.maven_repository}/org/springframework/spring-beans/5.0.12.RELEASE/spring-beans-5.0.12.RELEASE.jar" tofile="${artifact.output.dictionarywap:war_exploded}/WEB-INF/lib/spring-beans-5.0.12.RELEASE.jar"/>
    <copy file="${path.variable.maven_repository}/org/springframework/spring-context/5.0.12.RELEASE/spring-context-5.0.12.RELEASE.jar" tofile="${artifact.output.dictionarywap:war_exploded}/WEB-INF/lib/spring-context-5.0.12.RELEASE.jar"/>
    <copy file="${path.variable.maven_repository}/org/springframework/spring-core/5.0.12.RELEASE/spring-core-5.0.12.RELEASE.jar" tofile="${artifact.output.dictionarywap:war_exploded}/WEB-INF/lib/spring-core-5.0.12.RELEASE.jar"/>
    <copy file="${path.variable.maven_repository}/org/springframework/spring-jcl/5.0.12.RELEASE/spring-jcl-5.0.12.RELEASE.jar" tofile="${artifact.output.dictionarywap:war_exploded}/WEB-INF/lib/spring-jcl-5.0.12.RELEASE.jar"/>
    <copy file="${path.variable.maven_repository}/org/springframework/spring-expression/5.0.12.RELEASE/spring-expression-5.0.12.RELEASE.jar" tofile="${artifact.output.dictionarywap:war_exploded}/WEB-INF/lib/spring-expression-5.0.12.RELEASE.jar"/>
    <copy file="${path.variable.maven_repository}/org/springframework/spring-web/5.0.12.RELEASE/spring-web-5.0.12.RELEASE.jar" tofile="${artifact.output.dictionarywap:war_exploded}/WEB-INF/lib/spring-web-5.0.12.RELEASE.jar"/>
    <copy file="${path.variable.maven_repository}/org/springframework/spring-test/5.0.1.RELEASE/spring-test-5.0.1.RELEASE.jar" tofile="${artifact.output.dictionarywap:war_exploded}/WEB-INF/lib/spring-test-5.0.1.RELEASE.jar"/>
    <mkdir dir="${artifact.output.dictionarywap:war_exploded}/META-INF"/>
    <copy file="${basedir}/target/Dict/META-INF/MANIFEST.MF" tofile="${artifact.output.dictionarywap:war_exploded}/META-INF/MANIFEST.MF"/>
    <copy todir="${artifact.output.dictionarywap:war_exploded}">
      <fileset dir="${basedir}/src/main/webapp"/>
    </copy>
    <mkdir dir="${artifact.output.dictionarywap:war_exploded}/WEB-INF"/>
    <copy file="${basedir}/src/main/webapp/WEB-INF/web.xml" tofile="${artifact.output.dictionarywap:war_exploded}/WEB-INF/web.xml"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.dictionarywap:war, artifact.dictionarywap:war_exploded" description="Build all artifacts">
    <mkdir dir="${artifact.output.dictionarywap:war}"/>
    <copy todir="${artifact.output.dictionarywap:war}">
      <fileset dir="${artifact.temp.output.dictionarywap:war}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>